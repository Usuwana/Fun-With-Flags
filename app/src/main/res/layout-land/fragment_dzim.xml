<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_dzim">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="470dp">

        <Button
            android:id="@+id/q1"
            android:layout_width="184dp"
            android:layout_height="71dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="222dp"
            android:text="What is the national flower of Zimbabwe?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/q10" />

        <Button
            android:id="@+id/q2"
            android:layout_width="182dp"
            android:layout_height="78dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="28dp"
            android:text="Which year did Zimbabwe gain independence?"
            app:layout_constraintBottom_toTopOf="@+id/q1"
            app:layout_constraintEnd_toStartOf="@+id/q8"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/q3"
            android:layout_width="202dp"
            android:layout_height="69dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="33dp"
            android:text="Which natural wonder is located in Zimbabwe?"
            app:layout_constraintBottom_toTopOf="@+id/q5"
            app:layout_constraintEnd_toStartOf="@+id/q4"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/q4"
            android:layout_width="178dp"
            android:layout_height="73dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="26dp"
            android:text="When is Independence Day in Zimbabwe?"
            app:layout_constraintBottom_toTopOf="@+id/q6"
            app:layout_constraintEnd_toStartOf="@+id/q2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/q5"
            android:layout_width="181dp"
            android:layout_height="64dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:layout_marginBottom="233dp"
            android:text="Who was Zimbabwe's first president?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/q6" />

        <Button
            android:id="@+id/q6"
            android:layout_width="186dp"
            android:layout_height="90dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="210dp"
            android:text="How long did Zimbabwe's longest serving president stay in office?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/q1" />

        <Button
            android:id="@+id/q7"
            android:layout_width="177dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="222dp"
            android:text="Who is the current president of Zimbabwe?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/q5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/q8"
            android:layout_width="188dp"
            android:layout_height="73dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="33dp"
            android:text="What is the predominant religion in Zimbabwe?"
            app:layout_constraintBottom_toTopOf="@+id/q10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/q9"
            android:layout_width="177dp"
            android:layout_height="88dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="14dp"
            android:text="How many official languages does Zimbabwe have?"
            app:layout_constraintBottom_toTopOf="@+id/q7"
            app:layout_constraintEnd_toStartOf="@+id/q3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/q10"
            android:layout_width="112dp"
            android:layout_height="58dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="235dp"
            android:text="Where is Zimbabwe?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/finished" />

        <Button
            android:id="@+id/finished"
            android:layout_width="57dp"
            android:layout_height="51dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="242dp"
            android:text="finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/q8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</HorizontalScrollView>